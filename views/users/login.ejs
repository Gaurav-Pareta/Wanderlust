<% layout("/layouts/boilerplate") -%>

<div class="row mt-4 mb-5">
    <h1 class="col-6 offset-3 text-center mb-3">Login Here</h1>

    <div class="col-6 offset-3">
        <form method="POST" action="/login" novalidate class="needs-validation">

            <div>
                <label for="username" class="form-label">Username:</label>
                <input type="text" name="username" id="username" required class="form-control">
                <div class="invalid-feedback">Enter a valid username.</div>
            </div><br>

            <div>
                <label for="password" class="form-label">Password:</label>
                <input type="password" name="password" id="password" required class="form-control">
                <div class="invalid-feedback">Enter a correct password.</div>
            </div><br>

            <button class="btn btn-outline-dark w-100">Submit</button>
        </form><br>
        <p class="signup-alt">Don't have an account? Click <a href="/signup">here</a>.</p>
    </div>
</div>
