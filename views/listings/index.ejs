<% layout("/layouts/boilerplate") -%>

    <div class="row row-cols-lg-3 row-cols-md-2 row-cols-sm-1 allListings">
        <% for(let listing of allListings){ %>
            <a href="/listings/<%= listing._id %>" class="listing_link">
                <div class="card col">
                    <img src="<%= listing.image.url %>" class="card-img-top" style="height: 20rem;">
                    <div class="card-body">
                        <h5 class="card-title">
                            <%= listing.title %>
                        </h5>
                        <p class="card-text">
                            <%= listing.description %>
                        </p>
                        &#x20B9;<%= listing.price.toLocaleString("en-IN") %>
                    </div>
                </div>
                <% } %>
            </a>

    </div>